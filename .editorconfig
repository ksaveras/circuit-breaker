# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
indent_style = space
insert_final_newline = true
charset = utf-8

# 4 space indentation
[*.php]
indent_size = 4

[*.{yml,yaml}]
indent_size = 2

[*.neon]
indent_style = tab
